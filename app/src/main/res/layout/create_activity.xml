<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/greybg">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/create_toolbar"
    android:orientation="horizontal"
    android:layout_alignParentBottom="true">
    <Button
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:text="@string/add"
        android:drawableTop="@drawable/ic_add"
        android:id="@+id/create_add"
        android:layout_weight="1"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:text="@string/remove"
        android:drawableTop="@drawable/ic_remove"
        android:id="@+id/create_remove"
        android:layout_weight="1"
        />
</LinearLayout>
    <LinearLayout
        android:layout_toRightOf="@+id/game_thumbnail"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/whitebg"
        android:id="@+id/linearLayout2"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/author"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description"/>

    </LinearLayout>
    <ImageView
        android:src="@mipmap/ic_launcher"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/game_thumbnail"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/create_list"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/create_toolbar" />

</RelativeLayout>