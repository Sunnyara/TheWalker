<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sundanllc.thewalker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".CreateMenu"
            android:parentActivityName=".MainActivity"
            android:label="Edit New Game"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".CreateAddOption"
            android:screenOrientation="portrait"
            android:label="Edit Checkpoints"
            android:parentActivityName=".CreateMenu">
        </activity>

        <activity android:name=".PlayMenu"
            android:parentActivityName=".PlayMenu"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".AboutPage"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>